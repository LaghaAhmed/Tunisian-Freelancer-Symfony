{% extends 'FreelancerBundle::layout.html.twig' %}

{% block body -%}
    <h1>Cv list</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Cvid</th>
                <th>Skills</th>
                <th>Certifications</th>
                <th>Education</th>
                <th>Experiences</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cv_show', { 'id': entity.cvId }) }}">{{ entity.cvId }}</a></td>
                <td>{{ entity.skills }}</td>
                <td>{{ entity.certifications }}</td>
                <td>{{ entity.education }}</td>
                <td>{{ entity.experiences }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cv_show', { 'id': entity.cvId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cv_edit', { 'id': entity.cvId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('cv_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
