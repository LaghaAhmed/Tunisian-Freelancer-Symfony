{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tests list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Testid</th>
                <th>Nomtest</th>
                <th>Descriptiontest</th>
                <th>Typetest</th>
                <th>Nombrequestions</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tests_show', { 'id': entity.testId }) }}">{{ entity.testId }}</a></td>
                <td>{{ entity.nomtest }}</td>
                <td>{{ entity.descriptiontest }}</td>
                <td>{{ entity.typetest }}</td>
                <td>{{ entity.nombrequestions }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tests_show', { 'id': entity.testId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tests_edit', { 'id': entity.testId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tests_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
