{% extends 'FreelancerBundle::layout.html.twig' %}

{% block body -%}
    <h1>Groupes list</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Groupid</th>
                <th>Chefgroupid</th>
                <th>Nomgroup</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('groupes_show', { 'id': entity.groupId }) }}">{{ entity.groupId }}</a></td>
                <td>{{ entity.chefgroupId }}</td>
                <td>{{ entity.nomgroup }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('groupes_show', { 'id': entity.groupId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('groupes_edit', { 'id': entity.groupId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('groupes_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
